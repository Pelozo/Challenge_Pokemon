<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Poketeams_challenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_pokemon</item>
        <item name="colorPrimaryVariant">@color/blue_dark_pokemon</item>
        <item name="colorOnPrimary">@color/yellow_pokemon</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/blue_dark_pokemon</item>
        <item name="android:textColor">@color/yellow_pokemon</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="fontFamily">@font/pokemon_solid</item>
    </style>

    <style name="Theme.Poketeams_challenge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Poketeams_challenge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Poketeams_challenge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>